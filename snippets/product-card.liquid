{%- style -%}
  .collection-img {
    position: relative;
    overflow: hidden;
    display: inline-block;
  }
  .second-img {
    position: absolute;
    top: 0;
    left: 0;
    transition: all .5s;
    opacity: 0;
    z-index: 1;
  }

  .collection-img:hover .second-img {
    opacity: 1;
  }
{%- endstyle -%}

<div class="collection-box">
    <a href="{{ product.url | url_escape }}" class="collection-img">
        <img src="{{ product.featured_image | img_url: 'master' }}" width="100%" alt="{{ product.title | escape }}">

        {%- if product.images.size > 1 and show_second_image -%}
            <img src="{{ product.images[1] | img_url: 'master' }}" class="second-img" width="100%" alt="{{ product.title | escape }}">
        {%- endif -%}
    </a>

    <a href="{{ product.url | url_escape }}">
        <h4>{{ product.title | escape }}</h4>
    </a>

    {%- form 'product', product -%}
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

        <p>
            {%- if product.price <= product.compare_at_price -%}
                {%- if product.price_varies -%}
                    {{ product.price_min | money }} - {{ product.price_max | money }}
                {%- else -%}
                    {{ product.price | money }}
                    <span style="text-decoration: line-through;">{{ product.compare_at_price | money }}</span>
                {%- endif -%}
                {%- else -%}
                {%- if product.price_varies -%}
                    {{ product.price_min | money }} - {{ product.price_max | money }}
                {%- else -%}
                    {{ product.price | money }}
                {% endif %}
            {%- endif -%}
        </p>

        <p>{{ product.description | truncatewords: 16 }}</p>      
         
        <button type="submit">Add To Cart</button>
    {%- endform -%}
</div>