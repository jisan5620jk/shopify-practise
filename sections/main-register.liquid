{%- style -%}
  .custom-register-wrapper {
  max-width: 500px;
  margin: 40px auto;
  padding: 30px;
  background: #f9f9f9;
  border-radius: 8px;
  font-family: Arial, sans-serif;
}

.custom-register-wrapper h2 {
  text-align: center;
  margin-bottom: 20px;
  font-size: 26px;
}

.form-group {
  margin-bottom: 16px;
}

.form-group label {
  display: block;
  margin-bottom: 6px;
  font-weight: 600;
}

.form-group input[type="text"],
.form-group input[type="email"],
.form-group input[type="password"] {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.checkbox-group {
  display: flex;
  align-items: center;
}

.checkbox-group input[type="checkbox"] {
  margin-right: 10px;
}

.register-button {
  width: 100%;
  padding: 12px;
  background-color: #222;
  color: #fff;
  font-weight: bold;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background 0.3s ease;
}

.register-button:hover {
  background-color: #444;
}

.form-errors {
  background: #ffe0e0;
  color: #d00;
  padding: 10px;
  margin-bottom: 20px;
  border-radius: 4px;
}

{%- endstyle -%}

<div class="custom-register-wrapper">
  <h2>Create Your Account</h2>

  {% form 'create_customer' %}

    {% if form.errors and form.id == 'create_customer' %}
      <div class="form-errors">
        {% for field in form.errors %}
          <p>{{ field | capitalize }} - {{ form.errors.messages[field] }}</p>
        {% endfor %}
      </div>
    {% endif %}

    <!-- Hidden field: you can customize this value -->
    <input type="hidden" name="customer[note]" value="registered-from-custom-form">

    <!-- First Name -->
    <div class="form-group">
      <label for="first_name">First Name</label>
      <input
        type="text"
        name="customer[first_name]"
        id="first_name"
        value="{{ form.first_name | escape }}"
        required
      >
    </div>

    <!-- Last Name -->
    <div class="form-group">
      <label for="last_name">Last Name</label>
      <input
        type="text"
        name="customer[last_name]"
        id="last_name"
        value="{{ form.last_name | escape }}"
        required
      >
    </div>

    <!-- Email -->
    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        name="customer[email]"
        id="email"
        value="{{ form.email | escape }}"
        required
      >
    </div>

    <!-- Password -->
    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        name="customer[password]"
        id="password"
        required
      >
    </div>

    <!-- Confirm Password (not Shopify native, JS validation only) -->
    <div class="form-group">
      <label for="confirm_password">Confirm Password</label>
      <input
        type="password"
        id="confirm_password"
        required
      >
    </div>

    <!-- Newsletter checkbox -->
    <div class="form-group checkbox-group">
      <input
        type="checkbox"
        id="newsletter"
        name="customer[accepts_marketing]"
        {% if form.accepts_marketing %} checked {% endif %}
      >
      <label for="newsletter">Subscribe to newsletter</label>
    </div>

    <!-- Submit -->
    <button type="submit" class="register-button">Register</button>

  {% endform %}
</div>

<!-- JS Password Confirmation -->
<script>
  document.querySelector('form').addEventListener('submit', function (e) {
    const password = document.getElementById('password').value;
    const confirm = document.getElementById('confirm_password').value;

    if (password !== confirm) {
      e.preventDefault();
      alert("Passwords do not match.");
    }
  });
</script>