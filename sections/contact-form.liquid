{%- style -%}
  /* Contact form container spacing */
  form.contact-form {
    max-width: 800px;
    margin: 0 auto;
    padding: 30px;
    background: #f9f9f9;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    font-family: 'Arial', sans-serif;
  }

  /* Flex rows */
  form.contact-form .form-row {
    display: flex;
    gap: 20px;
    margin-bottom: 20px;
  }

  /* Input wrapper */
  form.contact-form .form-group {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  /* Labels */
  form.contact-form label {
    font-weight: 600;
    margin-bottom: 5px;
    color: #333;
  }

  /* Input fields */
  form.contact-form input,
  form.contact-form textarea {
    padding: 10px 15px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 16px;
    transition: border 0.3s;
  }

  form.contact-form input:focus,
  form.contact-form textarea:focus {
    border-color: #0077cc;
    outline: none;
  }

  /* Textarea height */
  form.contact-form textarea {
    min-height: 120px;
    resize: vertical;
  }

  /* Submit button */
  form.contact-form .submit button {
    background-color: #0077cc;
    color: #fff;
    padding: 12px 25px;
    font-size: 16px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  form.contact-form .submit button:hover {
    background-color: #005fa3;
  }

  /* Success message */
  form.contact-form .success-message {
    color: green;
    font-size: 18px;
    margin-bottom: 15px;
  }

  /* Error messages */
  form.contact-form .errors {
    color: red;
    font-size: 14px;
    margin-bottom: 10px;
  }

{%- endstyle -%}

{% form 'contact', class: 'contact-form' %}
  {{ form.errors | default_errors }}

  {% if form.posted_successfully? %}
    <p class="success-message">Your form posted successfully</p>
  {% endif %}

  <div class="form-row">
    <div class="form-group">
      <label for="first-name">First name</label>
      <input type="text" name="contact[first_name]" id="first-name"
        value="{{ form.first_name | default: customer.first_name }}" />
    </div>

    <div class="form-group">
      <label for="last-name">Last name</label>
      <input type="text" name="contact[last_name]" id="last-name"
        value="{{ form.last_name | default: customer.last_name }}" />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <label for="phone">Phone</label>
      <input type="tel" name="contact[phone]" id="phone"
        value="{{ form.phone | default: customer.phone }}" />
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" name="contact[email]" id="email"
        value="{{ form.email | default: customer.email }}" />
    </div>
  </div>

  <div class="form-group">
    <label for="order-number">Order number</label>
    <input type="text" name="contact[order_number]" id="order-number"
      value="{{ form.order_number }}" />
  </div>

  <div class="form-group">
    <label for="message">Message</label>
    <textarea name="contact[body]" id="message">{{ form.body }}</textarea>
  </div>

  <div class="submit">
    <button type="submit">Submit</button>
  </div>
{% endform %}
