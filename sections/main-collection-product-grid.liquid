{%- style -%}

/* 🌟 Container Layout */
.collection-filter {
  grid-column: 1/2;
  background-color: #ffffff;
  border-radius: 12px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
  padding: 2rem;
  margin-bottom: 3rem;
}

/* 🔽 Summary Dropdown */
.collection-filter details {
  margin-bottom: 2rem;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  overflow: hidden;
  transition: all 0.3s ease;
}
.collection-filter summary {
  padding: 1rem 1.2rem;
  background-color: #f8f8f8;
  font-weight: 600;
  font-size: 24px;
  color: #333;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* ✅ Checkbox Group Styling */
.collection-filter input[type="checkbox"] {
  margin-right: 10px;
  accent-color: #0077cc;
}
.collection-filter label {
  display: flex;
  align-items: center;
  padding: 0.6rem 0;
  font-size: 16px;
  font-weight: 600;
  color: #555;
}
.collection-filter ul {
  list-style: none;
  padding-left: 0;
  margin: 0;
}

/* 💰 Price Range Inputs */
.filter-group-display__price-range {
  display: flex;
  gap: 1.5rem;
  margin-top: 1rem;
}
.filter-group-display__price-range input {
  width: 100%;
  padding: 0.6rem 0.8rem;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 18px;
}

/* 🔘 Buttons */
input[type="submit"] {
  background-color: #0077cc;
  color: #fff;
  font-weight: 600;
  border: none;
  border-radius: 6px;
  padding: 0.7rem 1.5rem;
  margin-top: 1rem;
  transition: background-color 0.3s ease;
}
input[type="submit"]:hover {
  background-color: #005fa3;
}

/* ❌ Active Filter Labels */
.collection-filter > div:last-child a {
  background-color: #f0f0f0;
  padding: 0.4rem 0.8rem;
  border-radius: 20px;
  color: #333;
  text-decoration: none;
  font-size: 20px;
  margin-right: 0.5rem;
  display: inline-block;
  margin-bottom: 0.5rem;
  transition: background 0.3s ease;
  position: relative;
}
.collection-filter > div:last-child a:hover {
  background-color: #ff0000ff;
  color:white;
}

.collection-filter > div:last-child a .remove-icon {
  position: absolute;
  top: -4px;
  right: -4px;
  width:20px;
  height:20px; 
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ff0000ff;
  color:white;
  border-radius:50px;
  font-size:14px;
}

/* 🌈 Visual Display */
.visual-display__child {
  display: inline-block;
  width: 20px;
  height: 20px;
  background: #ccc;
  border-radius: 4px;
  margin-right: 10px;
}


