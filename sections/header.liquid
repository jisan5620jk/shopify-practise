<div class="header-section">
  <div class="header-logo">
    <a href="{{ shop.url | escape }}" title="{{ shop.title | escape }}">
      {% if section.settings.header_logo %}
        <img 
          src="{{ section.settings.header_logo | img_url: 'master' }}" 
          alt="{{ shop.title | escape }}" 
          loading="lazy"
        >
      {% else %}
        <h5>{{ shop.title | escape }}</h5>
      {% endif %}
    </a>
  </div>

  <div class="header-menu">
    {% if section.settings.header_menu != blank and section.settings.header_menu.links != blank %}
      <ul>
        {% for link in section.settings.header_menu.links %}
          <li><a href="{{ link.url | escape }}">{{ link.title | escape }}</a></li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Header Section",
  "tag": "section",
  "class": "shopify-section-header-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_logo",
      "label": "Select Logo"
    },
    {
      "type": "link_list",
      "id": "header_menu",
      "label": "Select Menu"
    }
  ],
  "presets": [
    {
      "name": "Header Section",
      "category": "Header"
    }
  ]
}
{% endschema %}
