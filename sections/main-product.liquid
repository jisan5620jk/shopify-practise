<div class="product-section">
  <div class="product-image">
    <div class="main-image">
      <img id="currentImage" src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.title }}">
    </div>
  </div>
  <div class="product-content">
    <div class="bundle-selector">
      <h3 class="bundle-title">- Bundle promotion is valid till 11:59 PM -</h3>

      {% assign base_price = product.price %}
      {% assign compare_price = product.compare_at_price %}
      {% assign discounts = '0,0.10,0.15' | split: ',' %}
      {% assign labels = 'Standard Price,10% extra discount on the total order!,15% extra discount on the total order!'
        | split: ','
      %}

      {% for i in (1..3) %}
        {% assign discount = discounts[i-1] | times: 1.0 %}
        {% assign total_price = base_price | times: i %}
        {% assign discount_amount = total_price | times: discount %}
        {% assign discounted_price = total_price | minus: discount_amount %}
        {% assign label = labels[i-1] %}

        <div class="bundle-option {% if i == 1 %}active{% endif %}" data-tier="{{ i }}">
          <label class="bundle-header">
            <input
              type="radio"
              name="bundle_option"
              value="{{ i }}"
              {% if i == 1 %}
                checked
              {% endif %}
            >
            <div class="custom-radio"></div>

            <div class="bundle-info">
              <div class="bundle-title-row">
                <strong>{{ i }} Pair</strong>

                {% if i == 2 %}
                  <div class="tag-wrapper popular-wrapper">
                    <span class="tag popular">MOST POPULAR!</span>
                  </div>
                {% elsif i == 3 %}
                  <div class="tag-wrapper best-wrapper">
                    <span class="tag best">BEST DEAL</span>
                  </div>
                {% endif %}
              </div>

              <div class="bundle-subtitle">{{ label }}</div>
            </div>

            <div class="bundle-price">
              <span class="price">Tk {{ discounted_price | money }}</span>
              <span class="compare">Tk {{ compare_price | times: i | money }}</span>
            </div>
          </label>

          <div class="variant-selectors">
            <div class="variant-inner">
              {% for j in (1..i) %}
                <div class="variant-row">
                  <label>#{{ j }}</label>
                  <div>
                    {% for option in product.options_with_values %}
                      <div class="product-option">
                        <label for="option-{{ forloop.index0 }}">{{ option.name }}</label>
                        <select
                          id="option-{{ forloop.index0 }}"
                          name="options[{{ option.name }}]"
                          data-option-index="{{ forloop.index0 }}"
                        >
                          {% for value in option.values %}
                            <option
                              value="{{ value | escape }}"
                              {% if value == option.selected_value %}
                                selected
                              {% endif %}
                            >
                              {{ value | escape }}
                            </option>
                          {% endfor %}
                        </select>
                      </div>
                    {% endfor %}
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      {% endfor %}

      <button class="add-to-cart">🛒 Add to cart</button>
    </div>
  </div>
</div>

{% if request.page_type == 'product' %}
  <script id="product-data" type="application/json">
    {{ product | json }}
  </script>
{% endif %}

<script>
  /*
  Bundle Accordion (Product Page)
  - Select kora bundle tier expand hobe
  - Baki gulo collapse thakbe
  - Resize e height re-calc hobe
  */
  (function () {
    'use strict'; // Strict mode চালু করে, ভুল variable ব্যবহার হলে error দেখাবে

    // Active tier expand/collapse
    function updateBundleAccordion(selectedTier) {
      // সব bundle option গুলো loop করে
      document.querySelectorAll('.bundle-option').forEach((option) => {
        const tier = parseInt(option.dataset.tier); // option-এর data-tier attribute থেকে number নেয়
        const container = option.querySelector('.variant-selectors'); // variant selectors div খুঁজে নেয়
        if (!container) return; // যদি container না থাকে তাহলে skip করে

        if (tier === selectedTier) {
          option.classList.add('active'); // active class add করে
          // Expand: container height অনুযায়ী max-height set করে (smooth expand)
          container.style.maxHeight = container.scrollHeight + 'px';
        } else {
          option.classList.remove('active'); // active class remove করে
          // Collapse: height 0 দেয়
          container.style.maxHeight = '0px';
        }
      });
    }

    function initAccordion() {
      // Initial: pre-selected radio detect করে
      const defaultSelected = document.querySelector('input[name="bundle_option"]:checked');
      if (defaultSelected) {
        // যদি কোন radio আগে থেকে select থাকে, সেই option expand করে
        updateBundleAccordion(parseInt(defaultSelected.value));
      }

      // সব radio input-এ change event listener attach করে
      document.querySelectorAll('input[name="bundle_option"]').forEach((radio) => {
        radio.addEventListener('change', (e) => {
          // যখন user select change করে, তখন corresponding bundle expand হয়
          updateBundleAccordion(parseInt(e.target.value));
        });
      });

      // Window resize হলে active container height re-calc করে
      window.addEventListener('resize', () => {
        const active = document.querySelector('.bundle-option.active .variant-selectors');
        if (active) active.style.maxHeight = active.scrollHeight + 'px';
      });
    }

    // DOM fully load হলে accordion initialize করে
    document.addEventListener('DOMContentLoaded', initAccordion);
  })();
</script>

<script>
  /*
  Bundle AJAX Add to Cart (Product Page)
  - Active bundle-এর প্রতিটি row থেকে option values collect করা
  - Correct variant id match করা
  - একবারে /cart/add.js এ multiple line items add
  - Cart count update (optional)
  */
  (function () {
    'use strict'; // Strict mode চালু করে, undeclared variable বা অন্য JS ভুল হলে error দেখাবে

    // Simple toast: user কে message দেখানোর জন্য (alert দিয়ে placeholder)
    function toast(msg) {
      alert(msg); // message popup করে দেখাবে
    }

    // Product JSON inline theke read করা
    function getInlineProductData() {
      try {
        const el = document.getElementById('product-data'); // HTML element খুঁজে নেয়
        return el ? JSON.parse(el.textContent) : null; // যদি element থাকে, JSON parse করে return করে
      } catch (e) {
        console.warn('Product JSON parse error', e); // parse error হলে warning দেখাবে
        return null;
      }
    }

    // Fallback: যদি inline product JSON না থাকে, URL থেকে fetch করে আনা
    async function fetchProductDataFromHandle() {
      try {
        const parts = window.location.pathname.split('/').filter(Boolean); // URL parts আলাদা করা
        const idx = parts.indexOf('products'); // "products" index খুঁজে বের করা
        if (idx === -1 || !parts[idx + 1]) return null; // যদি product handle না থাকে return null
        const handle = parts[idx + 1]; // handle extract করা
        const res = await fetch('/products/' + handle + '.js'); // fetch করে JSON
        if (!res.ok) return null; // যদি response ঠিক না থাকে return null
        return await res.json(); // JSON convert করে return
      } catch (e) {
        console.warn('Product JSON fetch failed', e); // fetch fail হলে warning
        return null;
      }
    }

    // Ensure product data: inline priority, তারপর fallback fetch
    let productDataCache = null; // once cache করলে future e reuse হবে
    async function ensureProductData() {
      if (productDataCache) return productDataCache; // cache থাকলে return

      const inline = getInlineProductData(); // inline check
      if (inline) {
        productDataCache = inline; // cache update
        return productDataCache;
      }
      const fetched = await fetchProductDataFromHandle(); // fallback fetch
      if (fetched) {
        productDataCache = fetched;
        return productDataCache;
      }
      return null; // data না থাকলে null
    }

    // Option values -> variant match করা (option1, option2, option3 order important)
    function findVariantByOptions(productData, optionValues) {
      if (!productData || !Array.isArray(productData.variants)) return null; // safeguard
      return (
        productData.variants.find((v) => {
          for (let i = 0; i < optionValues.length; i++) {
            if ((v['option' + (i + 1)] || '') !== optionValues[i]) return false; // mismatch হলে false
          }
          return true; // সব match করলে return true
        }) || null
      );
    }

    // Active bundle wrapper select করা
    function getActiveBundle() {
      return document.querySelector('.bundle-option.active'); // currently selected bundle
    }

    // Row থেকে ordered option values collect করা
    function getOptionValuesFromRow(rowEl) {
      const selects = rowEl.querySelectorAll('select[data-option-index]'); // select field গুলো খুঁজে নেয়
      const ordered = Array.from(selects).sort((a, b) => {
        return parseInt(a.dataset.optionIndex) - parseInt(b.dataset.optionIndex); // option index অনুযায়ী sort
      });
      return ordered.map((s) => s.value); // ordered values return
    }

    // Active bundle থেকে line items build করা
    function buildItemsFromActiveBundle(productData) {
      const activeBundle = getActiveBundle();
      if (!activeBundle) throw new Error('Please select a bundle first.'); // যদি active bundle না থাকে error

      const tier = parseInt(activeBundle.dataset.tier); // tier number
      const rows = activeBundle.querySelectorAll('.variant-row'); // bundle row গুলো
      if (!rows.length) throw new Error('No variant rows found for the selected bundle.');

      const items = [];

      rows.forEach((rowEl, idx) => {
        const optionValues = getOptionValuesFromRow(rowEl); // row থেকে option values

        // Fallback: single-variant product
        if (!optionValues.length && productData.variants && productData.variants.length === 1) {
          const onlyVariant = productData.variants[0];
          if (!onlyVariant.available) {
            throw new Error('Selected variant for row #' + (idx + 1) + ' is out of stock.');
          }
          items.push({
            id: onlyVariant.id,
            quantity: 1,
            properties: {
              Bundle: tier + ' Pair Bundle',
              Row: '#' + (idx + 1),
            },
          });
          return;
        }

        if (!optionValues.length) {
          throw new Error('Please select options for row #' + (idx + 1));
        }

        const variant = findVariantByOptions(productData, optionValues); // correct variant find
        if (!variant) {
          throw new Error('No matching variant found for row #' + (idx + 1));
        }
        if (!variant.available) {
          throw new Error('Selected variant for row #' + (idx + 1) + ' is out of stock.');
        }

        items.push({
          id: variant.id,
          quantity: 1,
          properties: {
            Bundle: tier + ' Pair Bundle',
            Row: '#' + (idx + 1),
          },
        });
      });

      return items; // সব items return
    }

    // POST multiple line items to /cart/add.js
    async function addItemsToCart(items) {
      const res = await fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          Accept: 'application/json',
        },
        body: JSON.stringify({ items }), // items JSON stringify
      });

      if (!res.ok) {
        const err = await res.json().catch(() => ({}));
        throw new Error(err?.description || 'Failed to add to cart.'); // error handle
      }

      return res.json(); // response return
    }

    // Optional: cart count update (যদি #cart-count element থাকে)
    async function updateCartCount() {
      try {
        const cart = await fetch('/cart.js').then((r) => r.json()); // cart fetch
        const el = document.querySelector('#cart-count'); // element select
        if (el) el.textContent = cart.item_count; // count update
      } catch (e) {
        console.warn('Cart count update failed', e);
      }
    }

    // init Add to Cart button
    function initAddToCart() {
      const btn = document.querySelector('.add-to-cart'); // button select
      if (!btn) return;

      btn.addEventListener('click', async (e) => {
        e.preventDefault(); // default form submit prevent

        const oldText = btn.textContent; // old button text save
        btn.disabled = true; // disable button
        btn.textContent = 'Adding...'; // show adding

        try {
          const productData = await ensureProductData(); // product data ensure
          if (!productData) throw new Error('Product data not found. Please include the product JSON.');

          const items = buildItemsFromActiveBundle(productData); // build items from selections

          await addItemsToCart(items); // add to cart

          await updateCartCount(); // optional cart count update
          toast('Bundle added to cart 🎉'); // success toast
        } catch (err) {
          console.error(err);
          toast(err.message || 'Something went wrong. Please try again.'); // error toast
        } finally {
          btn.disabled = false; // re-enable button
          btn.textContent = oldText; // old text restore
        }
      });
    }

    document.addEventListener('DOMContentLoaded', initAddToCart); // DOM loaded হলে init
  })();
</script>
